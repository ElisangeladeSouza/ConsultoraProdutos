<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!--Aponta para a fabrica de exceptionhandler gerenciado pelo JSF, que trata exceções lançadas. (By Cássio Oliveira <cassio@cassioliveira.com.br>)-->
    <factory>
        <exception-handler-factory>
            br.com.projetospessoais.consultoraprodutos.util.jsf.JsfExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    
    <application>
        <!-- Set the target of file .properties with the strings to the view 
        (internationalization). -->
        <resource-bundle>
            <base-name>i18n.mensagens</base-name>
            <var>msg</var>
        </resource-bundle>
        
        <!-- Set default language for messages of bean Validation and others components 
        around the system. -->
        <locale-config>
            <default-locale>pt_BR</default-locale>
        </locale-config>
        
    </application>
</faces-config>
